<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hackcit20">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher1_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.HackCit20">
        <activity android:name=".Activity.PaymentActivity"></activity>
        <activity
            android:name=".Activity.StreamingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.MainActivity2"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.LoginActivity" />
        <activity
            android:name=".Activity.YoutbeActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>